set nocompatible
filetype off "for vundle

"set custom vim path for local machine (choose one)
let g:my_vim_path	= '~/Dropbox/config/vim'
" let g:my_vim_path	= '~/.vim'

"add vundle to runtime path and run it -- Package Management
execute "set rtp+=" . g:my_vim_path . '/bundle/vundle/'
execute "call vundle#rc('" . g:my_vim_path . "/bundle/')"

"Source my custom vimrc
execute "source " . g:my_vim_path . "/vimrc"
